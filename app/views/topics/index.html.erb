<div class="row">
	<div class="col-xs-12">
		<div class="topic_new">
			<h2>新しいスレッドを作る</h2>
			<%= form_for(@topic) do |f| %>
				<div class="field row">
					<%= f.label :title %>
					<%= f.text_field :title, class: "col-xs-12 topic_title" %>
				</div>

				<div class="field row">
					<%= f.label :contents %>
					<%= f.text_area :contents, rows:'5', class: "col-xs-12 topic_contents" %>
				</div>

				<div class="actions row">
					<%= f.submit "新しいスレッドを作成", class: "btn btn-primary col-xs-12" %>
				</div>
			<% end %>
		</div>
		<div class="topic_index">
			<h2>スレッド一覧</h2>
			<% @topics.each do |topic| %>
				<div class="topic_title">
					<h3><%= link_to topic_path(topic) do %>
						<%= topic.title %>
					<% end %>
					<%= topic.created_at %></h3>
					<br>
					<%= topic.contents %>
				</div>
			<% end %>
		</div>
	</div>
</div>