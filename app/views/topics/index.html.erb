<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<% if user_signed_in? %>
			<h4><%= link_to 'ログアウト', destroy_user_session_path, method: :delete%>
		<% else %>
			<h4>スレッドの作成、レスの書き込みには、
				<%= link_to '会員登録', new_user_registration_path %>、
				<%= link_to 'ログイン', new_user_session_path %>が必要です。閲覧はだれでも可能です。</h4>
		<% end %>
	<% if user_signed_in? %>
		<h2>新しいスレッドを作る</h2>
		<div class="row topic_new">
			<div class="col-xs-6 topic_new_form">
			<%= form_for(@topic) do |f| %>
				<div class="field row">
					<h4>タイトル</h4>
					<%= f.text_field :title, class: "form-control col-xs-12 topic_title" %>
				</div>

				<div class="field row">
					<h4>スレッドの説明</h4>
					<%= f.text_area :contents, rows:'2', class: "form-control col-xs-12 topic_contents" %>
				</div>
				<div class="actions">
					<%= f.submit "新しいスレッドを作成", class: "btn btn-primary col-xs-5 col-xs-offset-3" %>
				</div>
			<% end %>
			</div>
		</div>
	<% end %>
		<h2>スレッド一覧</h2>
		<div class="row topic_index">
			<% @topics.each do |topic| %>
				<div class="topic_title">
					<h3><%= link_to topic_path(topic) do %>
						<%= topic.title %>
					<% end %>
					<%= topic.created_at %></h3>
					<br>
					<%= topic.contents %>
				</div>
			<% end %>
		</div>
	</div>
</div>